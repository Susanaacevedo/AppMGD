<h1>Home#index</h1>


<div class="container">
  <div class="row">
    <% @productos.each_slice(4) do |row| %>
      <% row.each do |product| %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5> <%= product.nombre %> </h5>
              <p> <%= product.precio %> </p>
              <%= link_to "Agregar al Carro", "#", class: 'btn btn-warning'%>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top:20px;"> </div>
    <% end %>
  </div>
</div>
